<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/black_2"
    app:cardElevation="3dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        >

        <TextView
            android:id="@+id/txtTitleNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="4dp"
            android:text="Note"
            android:layout_toLeftOf="@id/imgDeleteNote"
            />

        <TextView
            android:id="@+id/txtDateNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTitleNote"
            android:layout_toLeftOf="@id/imgDeleteNote"
            android:text="Atualizado em "
            android:padding="4dp"
            android:textSize="13sp"
            android:layout_margin="3dp"
            android:textColor="@color/white"
            />
        
        <ImageView
            android:id="@+id/imgDeleteNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delete"
            android:layout_margin="3dp"
            android:padding="3dp"
            app:tint="@color/white"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>